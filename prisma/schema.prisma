// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("LOCAL_DB_URL")
  url      = env("LOCAL_DB_URL")
}

model UserAccount {
  username String @id @db.VarChar(50)

  password String @db.VarChar(50)
  createdAt DateTime @db.Timestamp(0) @default(now())
  updatedAt DateTime @db.Timestamp(0) @default(now())
  lastLogin DateTime @db.Timestamp(0) @default(now())

  Tasks Task[]
  UserProfile UserProfile?
}

model UserProfile {
  id String @id @default(uuid())
  nickname String @db.VarChar(50)
  photoId String @db.VarChar(255) @default("default_user_profile_photo.png")
  message String? @db.VarChar(255)
  updatedAt DateTime @db.Timestamp(0) @default(now())

  ownerUsername String @db.VarChar(50)
  UserAccount UserAccount @relation(fields: [ownerUsername], references: [username])
}

model Task {
  id String @id @default(uuid())
  
  description String @db.VarChar(255)
  status TaskStatus @default(TODO)
  createdAt DateTime @db.Timestamp(0) @default(now())
  updatedAt DateTime @db.Timestamp(0) @default(now())
  completedAt DateTime? @db.Timestamp(0) 

  creatorUsername String @db.VarChar(50)
  UserAccount UserAccount @relation(fields: [creatorUsername], references: [username])
}

enum TaskStatus {
  TODO
  STARTED
  STRUGGLING
  DONE
}